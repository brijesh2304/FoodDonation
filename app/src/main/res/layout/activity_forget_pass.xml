<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="food.donation.ActivityClass.ForgetPassActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/forget_pass_pager"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="3dp"
        android:scrollbars="horizontal" />

    <EditText
        android:id="@+id/forget_pass_edt_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_pass_pager"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:hint="Enter Your Hint"
        android:padding="10dp" />

    <Button
        android:id="@+id/forget_pass_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_pass_edt_hint"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_btn"
        android:text="Next"
        android:textColor="@android:color/white"
        android:textSize="20dp"

        android:textStyle="bold|italic" />

</RelativeLayout>
